<Window x:Class="LIBRARYMANAGEMENTPART2.TableWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LIBRARYMANAGEMENTPART2"
        mc:Ignorable="d"
        Title="TableWindow" Height="Auto" Width="Auto" Background="#FFEAD3">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="#4950DE">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <TextBlock Text="Tables"
                       Foreground="White"
                       FontSize="20"
                       FontWeight="Bold"
                       Margin="5,0,0,0"/>
            </Grid>
            <Grid Grid.Column="1">
                <Button Content="EXIT"
                        Background="DimGray"
                        Name="buttonexittable"
                        Foreground="White"/>
            </Grid>
        </Grid>
        <Grid Grid.Row="1">
            
        </Grid>
    </Grid>
</Window>
